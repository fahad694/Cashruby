<%= form_with model: @item do |form| %>
  <%= form.label :name, "Item name : " %>
  <%= form.text_field :name %>
  <br>
  <br>
  <%= form.label :quantity, "Quantity : " %>
  <%= form.number_field :quantity %>
  <br>
  <br>
  <%= form.label :price, "Price : " %>
  <%= form.number_field :price %>
  <br>
  <br>
  <%= form.label :sub_category_id, "Select sub category :" %>
  <%= form.select(:sub_category_id, options_for_select(@sub_categories.map { |sub_category|
  [sub_category.title, sub_category.id]  } ))%>
  <%= form.label :category_id, " Select Category :" %>
  <%= form.select(:category_id, options_for_select(@categories.map { |category|
  [category.title, category.id] })) %>
  <%= form.submit @item.persisted? ? 'Update' : 'Create' %>
<% end %>
