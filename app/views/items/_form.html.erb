<div class="new_item_container container d-flex justify-content-center mt-3 border-black">
  <div class="container d-flex justify-content-center mt-3">
    <%= form_with model: @item do |form| %>
      <div>
        <%= form.label :name, "Item name", class:"mt-3" %>
        <%= form.text_field :name, class:"text_field form-control no border" %>
      </div>
      <div>
        <%= form.label :quantity, "Quantity", class:"mt-3" %>
        <%= form.number_field :quantity, class:"text_field form-control no border" %>
      </div>
      <div>
        <%= form.label :price, "Price", class:"mt-3" %>
        <%= form.number_field :price, class:"text_field form-control no border" %>
      </div>
      <div>
        <%= form.label :sub_category_id, "Subcategory", class:"mt-4" %>
        <%= form.select(:sub_category_id, options_for_select(@sub_categories.map { |sub_category|
        [sub_category.title, sub_category.id]  } ),{}, {:class => 'select_options '})%>
      </div>
      <div>
        <%= form.label :category_id, "Category ", class:"mt-4" %>
        <%= form.select(:category_id, options_for_select(@categories.map { |category|
        [category.title, category.id] }),{}, {:class => 'select_options'}) %>
      </div>
      <div class="mt-3">
        <%= form.submit @item.persisted? ? 'Update' : 'Create', class:"new_item_button rounded-2 form-control no-border" %>
      </div>
    <% end %>
  </div>
</div>