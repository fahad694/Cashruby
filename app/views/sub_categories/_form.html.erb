<%= form_with model: @sub_category do |form| %>
  <%= form.label :title, "Sub Category" %> 
  <%= form.text_field :title %>
  <%= form.select(:category_id, options_for_select(@categories.map do |category|
    [category.title, category.id]
    end)) %>
  <%= form.submit @sub_category.persisted? ? 'Update' : 'Create' %>
<% end %>
